{
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },
    "baseUrl": ".",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "*.vue"
  ],
  "exclude": [
    "node_modules", 
    "dist",
    "**/*.d.ts"
  ]
}
